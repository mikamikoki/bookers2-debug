<table class='table'>
  <% book.book_comments.each do |book_comment| %>
  <tr>
    <td><%= image_tag('no-image-icon.jpg') %><br>
        <%= link_to book_comment.user.name  %>
    </td>
    <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
    <td><%= link_to 'Destroy', book_book_comment_path(book.id, book_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_book_#{book.id}"%></td>
        <% end %>
  </tr>
        <% end %>
</table>